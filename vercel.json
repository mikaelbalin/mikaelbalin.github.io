{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "src/app/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/**/*.tsx": {
      "maxDuration": 30,
      "memory": 1024
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/cron/warmup",
      "schedule": "*/5 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, stale-while-revalidate=600"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
